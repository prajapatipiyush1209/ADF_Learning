						},
						"trigger_type": {
							"value": "@pipeline().TriggerType",
							"type": "Expression"
						},
						"run_id": {
							"value": "@pipeline().GroupId",
							"type": "Expression"
						},
						"endtime": {
							"value": "@formatDateTime(variables('pipeline_end_time'), 'yyyy-MM-dd HH:mm:ss')\n",
							"type": "Expression"
						},
						"error_message": {
							"value": "''",
							"type": "Expression"
						},
						"status": {
							"value": "Success",
							"type": "Expression"
						},
						"run_type": {
							"value": "Pipeline Run Type",
							"type": "Expression"
						}
					}
				}
			}
		],
		"variables": {
