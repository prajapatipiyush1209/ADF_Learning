{
	"name": "Schema_Drifting_DataFlow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "schema_drifting",
						"type": "DatasetReference"
					},
					"name": "DataFromSource"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "StoreToDestination_Schema_Drifting",
						"type": "DatasetReference"
					},
					"name": "StoreToDestination",
					"rejectedDataLinkedService": {
						"referenceName": "AzureDataLakeStorage",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          name as string,",
				"          email as string,",
				"          age as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: false) ~> DataFromSource",
				"DataFromSource sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> StoreToDestination"
			]
		}
	}
}